<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Admin | Contact</title>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
		/>
		<link rel="stylesheet" href="/css/contactAdmin.css" />
		<link rel="stylesheet" href="/css/global.css" />
	</head>
	<body>
		<%- include('./util/navbar.ejs') %>

		<table class="tably mt-5">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Email</th>
					<th>Phone no</th>
					<th>Subject</th>
					<th>Message</th>
					<th>Status</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% contacts.forEach(contact => { %>
				<tr>
					<td><%- contact._id %></td>
					<td><%- contact.name %></td>
					<td><%- contact.email %></td>
					<td><%- contact.phone %></td>
					<td><%- contact.subject %></td>
					<td><%- contact.message %></td>
					<td><%- contact.status %></td>
					<td class="action-buttons">
						<form action="/admin/contact/update" method="post">
							<input type="hidden" name="id" value="<%- contact._id %>" />
							<button class="action-btn" type="submit">
								<i class="fa-solid fa-check" style="color: #ffffff"></i>
							</button>
						</form>

						<form action="/admin/contact/delete" method="post">
							<input type="hidden" name="id" value="<%- contact._id %>" />
							<button class="action-btn" type="submit">
								<i class="fa-solid fa-trash" style="color: #ffffff"></i>
							</button>
						</form>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>

		<%- include('./util/footer.ejs') %>
	</body>
</html>
